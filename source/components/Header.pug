header
	.header-wrapper
		.nanya-logo
			figure.pic
				img(src="../images/logo.png")
		.main
			.close
			ul.main-menu
				li.main-item 
					a.main-a(href="../"+$t.lang+"/index.html") #{$t.header.home}
				li.main-item
					a.main-a(href="https://www.nanya-cyber-shopping-mall.com" target="_blank") #{$t.header.nanya}
				li.main-item 
					.main-a #{$t.header.application}
					ul.sub-menu
						li.sub-item
							a.sub-a(href="./medical.html") #{$t.header.medical}
						li.sub-item
							a.sub-a(href="./outdoor.html") #{$t.header.outdoor}
						li.sub-item
							a.sub-a(href="./sport.html") #{$t.header.sport}
						li.sub-item
							a.sub-a(href="./functional.html") #{$t.header.functional}
				li.main-item
					a.main-a(href="./product.html") #{$t.header.product}
				li.main-item 
					a.main-a(href="./case.html") #{$t.header.case}
				li.main-item
					a.main-a(href="./contact.html") #{$t.header.contact}
			.mobile-lang
				.svg-box
					include ../partials/icons/earth_icon.pug
				p
					if $t.lang == 'zh'
						span 語系 : 
							| 繁體中文 ▼
					else if $t.lang == 'ch'
						span 语系 : 
							| 简体中文 ▼
					else if $t.lang == 'en'
						span Language : 
							| English ▼
				ul.sub-menu
					li.sub-item
						a.sub-a(href="../zh/index.html")  繁體中文
						a.sub-a(href="../ch/index.html")  简体中文
						a.sub-a(href="../en/index.html")  English
