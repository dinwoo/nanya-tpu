extend ../Layout.pug

block header
  //- include ../components/Header.pug

block footer
  //- include ../components/Footer.pug

block css
  link(rel="stylesheet", href="../css/product.css")

block js
  script.
    product();

block body
  article#contact
    section.banner
      .content
        .slogan #{$t.product.banner.slogan}
    section.information
      .wrapper
        .info-box
          each item, index in $t.product.information.item
            .info-item
              .title= item.title
              figure.pic
                img(src=`../images/product_pic_0${index+1}.jpg`)
              .content
                .txt= item.txt
                if index == 0
                  #specification-btn.btn #{$t.product.information.btn}
    section.carousel
      .wrapper
        h2 #{$t.product.carousel.title}
        .txt #{$t.product.carousel.txt}
        .container
          .main-carousel.product-main-carousel
            - for (var i = 1; i <= 7; i++)
              .carousel-item
                .item
                  figure.pic
                    img(src=`../images/PI_combination_application_0${i}.jpg`)
          .dot-box
            .pre-btn#product-pre
            .dot-carousel.product-dot-carousel
              - for (var i = 1; i <= 7; i++)
                .carousel-item
                  .pic(style=`background-image:url('../images/PI_combination_application_0${i}.jpg')`)
            .next-btn#product-next

    section.certification
      .wrapper
        h2 #{$t.product.certification.title}
        .txt #{$t.product.certification.txt}
        .certification-box
          - var list = $t.product.certification.item
          each item,index in list
            .item
              figure.pic
                img(src=`../images/product_certification_0${index+1}.jpg`)
              .name= item
      
    section#specification-popup.popup
      .container
        .mask
        figure.pic
          img(src=`../images/product_specification.jpg`)

    section#certification-popup
      .container
        .mask
        .carousel-box
          .main
            .main-carousel.popup-main-carousel
              - for (var i = 1; i <= 5; i++)
                .carousel-item(data-index=i)
                  .item
                    figure.pic
                      img(src=`../images/product_certification_0${i}.jpg`)
            .dot-box
              .pre-btn#popup-pre
              .dot-carousel.popup-dot-carousel
                - var list = $t.product.certification.item
                each item in list
                  .carousel-item
                    .item 
                      .certification-name= item
              .next-btn#popup-next
          .pic-box
            - for (var i = 1; i <= 5; i++)
              .item.active(data-index=i)
                figure.pic
                  img(src=`../images/product_certification_0${i}.jpg`)



